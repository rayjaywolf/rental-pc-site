---
import Image from "astro/components/Image.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Home";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="hero">
    <div class="hero-info">
      <h1 class="hero-text">
        The <span>Best PC Rental</span>
        <br /> Services in India
      </h1>
      <p class="hero-description">
        Rent the perfect PC for any occasion. <br /> India's premier PC rental service.
      </p>
      <button class="apply-btnjin"> Rent Now </button>
    </div>
    <div class="fade-l"></div>
    <div class="fade-b"></div>
  </div>
  <div class="about-section">
    <div class="about-img">
      <Image
        src="https://nzxt.com/assets/cms/34299/1659594250-boost-performance-primary.png?auto=format&fit=fillmax&h=1344&w=1344"
        width={1344}
        height={1344}
        alt="About Us"
      />
    </div>
    <about class="content"></about>
  </div>
</BaseLayout>

<style>
  .hero {
    background-image: url("images/hero.jpg");
    background-size: cover;
    background-position: center;
    height: 100vh;
    position: relative;
    padding: 20rem 10rem;
    .hero-info {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      /* font-family: "Oxanium"; */
      position: relative;
      z-index: 10;
      .hero-text {
        font-size: 3rem;
        font-weight: 400;
        span {
          color: #bdf9a1;
          font-weight: 600;
        }
      }
      .hero-description {
        font-size: 1.2rem;
        font-weight: 400;
        color: #f7f7f7;
        z-index: 10;
        position: relative;
      }
    }
    .fade-l {
      position: absolute;
      left: 0;
      top: 0;
      min-width: 120px;
      width: 50%;
      height: 100%;
      z-index: 0;
      background-image: linear-gradient(90deg, #0f0914, transparent);
    }
    .fade-b {
      position: absolute;
      left: 0;
      bottom: 0;
      width: 100%;
      height: 8rem;
      z-index: 0;
      background-image: linear-gradient(transparent, #0f0914);
    }
  }
  .about-section {
    height: calc(100vh - 8rem);
    padding: 0 7.5rem;
    display: grid;
    grid-template-columns: 1fr 1fr;
  }
</style>
