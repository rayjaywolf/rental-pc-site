---
const { image, name, specs } = Astro.props;
---

<div class="card">
  <div class="card-image">
    <img src={image} alt={name} />
  </div>
  <div class="card-info">
    <h2 class="card-name">{name}</h2>
    <ul class="card-specs">
      {specs.map((spec) => <li>{spec}</li>)}
    </ul>
  </div>
  <button class="card-btn">Rent Now</button>
</div>

<style>
  .card {
    border: 1px solid #ddd;
    border-radius: 10px;
    max-width: 300px;
    aspect-ratio: 1 / 1.5;
    background-color: #161026;
    border: 1px solid #2a2241;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .card-image {
    width: 100%;
    height: 50%;
    border-radius: 8px 8px 0px 0px;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid #2a2241;
    img {
      width: 100%;
      height: 100%;
      object-fit: contain;
      border-radius: 8px 8px 0px 0px;
    }
  }

  .card-info {
    text-align: left;
    padding: 1rem 1.5rem;
  }

  .card-name {
    font-size: 1.5rem;
  }

  .card-specs {
    list-style-type: none;
    padding: 0;
  }

  .card-specs li {
    margin: 0.5rem 0;
  }

  .card-btn {
    width: 100%;
    border: none;
    box-shadow: none;
    border-top: 1px solid #2a2241;
    padding: 1.5rem 0;
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: "Oxanium";
    font-weight: 300;
    font-size: 14px;
  }
</style>
